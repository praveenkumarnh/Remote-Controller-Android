<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnVolumeDown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="2"
                android:background="@android:drawable/toast_frame"
                app:srcCompat="@drawable/ic_volume_down_white_24px" />

            <ImageButton
                android:id="@+id/btnVolumeMute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@android:drawable/toast_frame"
                app:srcCompat="@drawable/ic_volume_off_white_24px" />

            <ImageButton
                android:id="@+id/btnVolumeUp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="2"
                android:background="@android:drawable/toast_frame"
                app:srcCompat="@drawable/ic_volume_up_white_24px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <ImageButton
                android:id="@+id/btnMediaPrev"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@android:drawable/toast_frame"
                app:srcCompat="@drawable/ic_skip_previous_white_24px" />

            <ImageButton
                android:id="@+id/btnMediaPlayPause"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="3"
                android:background="@android:drawable/toast_frame"
                app:srcCompat="@drawable/ic_play_arrow_white_24px" />

            <ImageButton
                android:id="@+id/btnMediaNext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@android:drawable/toast_frame"
                app:srcCompat="@drawable/ic_skip_next_white_24px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <ImageButton
                android:id="@+id/btnMediaRewind"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="2"
                android:background="@android:drawable/toast_frame"
                app:srcCompat="@drawable/ic_fast_rewind_white_24px" />

            <ImageButton
                android:id="@+id/btnMediaStop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@android:drawable/toast_frame"
                app:srcCompat="@drawable/ic_stop_white_24px" />

            <ImageButton
                android:id="@+id/btnMediaForward"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="2"
                android:background="@android:drawable/toast_frame"
                app:srcCompat="@drawable/ic_fast_forward_white_24px" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>